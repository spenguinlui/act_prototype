extends layout.pug
block content
  include ./breadcrumb.pug
  h1 ATC 出機檢查成績表
  hr
  //- 前表
  .row
    .col-6.pr-0
      .input-group.mb-1
        .input-group-prepend
          label.input-group-text(for="inputGroupSelect01") 客戶名稱
        select.custom-select#inputGroupSelect01(name="") 
          option(value="" selected) 選擇客戶
          option(value="1") 東台
          option(value="2") 台中精 G
          option(value="3") 臻賞
      .input-group.mb-1
        .input-group-prepend
          span.input-group-text 製造號碼
        input(type="text").form-control
      .input-group.mb-1
        .input-group-prepend
          label.input-group-text(for="inputGroupSelect01") 裝配人員
        select.custom-select#inputGroupSelect02(name="") 
          option(value="" selected) 選擇人員
          option(value="1") 林先生
          option(value="2") 陳先生
          option(value="3") 王先生
      .input-group.mb-1
        .input-group-prepend
          label.input-group-text(for="inputGroupSelect01") 品檢人員
        select.custom-select#inputGroupSelect02(name="") 
          option(value="" selected) 選擇人員
          option(value="1") 林先生
          option(value="2") 陳先生
          option(value="3") 王先生
      .input-group.mb-1
        .input-group-prepend
          label.input-group-text(for="inputGroupSelect01") 複核人員
        select.custom-select#inputGroupSelect02(name="") 
          option(value="" selected) 選擇人員
          option(value="1") 林先生
          option(value="2") 陳先生
          option(value="3") 王先生
    .col-6.pl-1
      .input-group.mb-1
        .input-group-prepend
          span.input-group-text ATC 規格
        input(type="text" value="ATC - # ").form-control
      .input-group.mb-1
        .input-group-prepend
          span.input-group-text 馬達規格
        input(type="text" placeholder="CF     3/4HP").form-control
      .input-group.mb-1
        .input-group-prepend
          span.input-group-text 減速機比
        input(type="text" placeholder="1    :  ").form-control
      .input-group.mb-1
        .input-group-prepend
          span.input-group-text 品檢日期
        input(type="date", name="").form-control
      .input-group.mb-1
        .input-group-prepend
          span.input-group-text 複核日期
        input(type="date", name="").form-control
    .col-4.pr-1
      .input-group.mb-1
          .input-group-prepend
            span.input-group-text 凸輪號碼
          input(type="text").form-control
    .col-4.px-0
      .input-group.mb-1
          .input-group-prepend
            span.input-group-text 凸輪滾子尺寸
          input(type="text" placeholder="單位\(mm\)").form-control
    .col-4.pl-1
      .input-group.mb-1
          .input-group-prepend
            span.input-group-text 平板凸輪滾子尺寸
          input(type="text" placeholder="單位\(mm\)").form-control

  //- 檢查項目
  table.table
    thead.thead-dark
      tr
        th(scope="col" width="5%") 編號
        th(scope="col") 檢查項目
        th(scope="col" width="10%") 實際值
        th(scope="col" width="10%") 結果
    tbody 
      tr#th_1
        th(scope="row") 1
        td 換刀時間(TOOL-TOOL).60Hz
        td
          input#input_1_1(type="text" placeholder="單位\(sec\)").form-control
        td
          input#input_1_2(type="text" placeholder="單位\(sec\)").form-control
      tr
        th(scope="row") 2
        td 扣刀角度
        td
          input(type="text" placeholder="單位\(度\)").form-control
        td
          input(type="text" placeholder="單位\(度\)").form-control
      tr
        th(scope="row") 3
        td 換刀移動量 115mm +0, +0.5
        td
          input(type="text" placeholder="單位\(mm\)").form-control
        td
          input(type="text" placeholder="單位\(mm\)").form-control
      tr
        th(scope="row") 4
        td 原點至扣刀點重複精度 ± 0.1mm
        td
          input(type="text" placeholder="單位\(mm\)").form-control
        td
          input(type="text" placeholder="單位\(mm\)").form-control
      tr
        th(scope="row") 5
        td 一百八十度換刀平面差 ± 0.1mm
        td
          input(type="text" placeholder="單位\(mm\)").form-control
        td
          input(type="text" placeholder="單位\(mm\)").form-control
      tr
        th(scope="row") 6
        td 扣刀點與一百八十度分割精度 ± 0.15mm
        td
          input(type="text" placeholder="單位\(mm\)").form-control
        td
          input(type="text" placeholder="單位\(mm\)").form-control
      tr
        th(scope="row") 7
        td 原點位置矯正
        td
          input(type="text").form-control
        td
          input(type="text").form-control
      tr
        th(scope="row") 8
        td 煞車釋放，手動運轉是否順暢
        td
          input(type="text").form-control
        td
          input(type="text").form-control
      tr
        th(scope="row") 9
        td 無負載連續運轉有無異音
        td
          input(type="text").form-control
        td
          input(type="text").form-control
      tr
        th(scope="row") 10
        td 負載運轉有無振動掛刀 7kg (300mm 長) x 1
        td
          input(type="text").form-control
        td
          input(type="text").form-control
      tr
        th(scope="row") 11
          td 分解動作運轉，近接開關檢驗
          td
            input(type="text").form-control
          td
            input(type="text").form-control
      tr
        th(scope="row") 11
          td 馬達運轉制動測試
          td
            input(type="text").form-control
          td
            input(type="text").form-control
      tr
        th(scope="row") 12
          td 外觀尺寸孔位檢查
          td
            input(type="text").form-control
          td
            input(type="text").form-control
      tr
        th(scope="row") 13
          td 
            | ATC 於原點位置之間隙 < 0.2mm
            br
            | (30kg 正向施力放鬆後，量錶歸零反向施力，放鬆後讀取)
          td
            .input(type="text" placeholder="單位\(mm\)").form-control
          td
            .input(type="text" placeholder="單位\(mm\)").form-control
      tr
        th(scope="row") 14
          td ATC 連續運轉測試 1000次馬達之溫升 < 60˚C
          td
            .input(type="text" placeholder="單位\(˚C\)").form-control
          td
            .input(type="text" placeholder="單位\(˚C\)").form-control
      tr
        th(scope="row") 15
          td ATC 於扣刀處點上下位移量 < 0.5mm
          td
            .input(type="text" placeholder="單位\(mm\)").form-control
          td
            .input(type="text" placeholder="單位\(mm\)").form-control
      tr
        th(scope="row") 16
          td 一百八十度新軸偏擺 ≤ 0.04mm
          td
            .input(type="text" placeholder="單位\(mm\)").form-control
          td
            .input(type="text" placeholder="單位\(mm\)").form-control
      tr
        th(scope="row") 17
          td 馬達運轉負載
          td
            .input(type="text" placeholder="單位\(安培\)").form-control
          td
            .input(type="text" placeholder="單位\(安培\)").form-control
  hr
  .row
    .mx-auto
      button(type="button").btn.btn-primary 完成填寫

  script
    include form.js